                  <Button layoutX="2.0" layoutY="611.0" mnemonicParsing="false" prefHeight="78.0" prefWidth="85.0" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fx:id="btn_logout" fitHeight="78.0" fitWidth="86.0" pickOnBounds="true" preserveRatio="true">
